@using Madetomeasure.Models.Admin
@model Madetomeasure.Models.Admin.LinkStitchingunitware
@using Madetomeasure.Data
@{
    ViewBag.Title = "Link Stitchingunit Warehouse";

}
@if (TempData["Message"] != null)
{
@if ((string)TempData["Message"] == "stitchingerror")
{
    TempData["Message"] = " ";
    <script>
        alert('Please select Stitchingunit');
    </script>


}
@if ((string)TempData["Message"] == "warehouseerror")
{
    TempData["Message"] = " ";
    <script>
        alert('Please select Warehouse');
    </script>


}
}
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="fa fa-table"></i> Link Stitching Unit and Warehouse</h3>
                   
                </div>
            </div>
            <!-- page start-->
            <br>

            <form class="form-validate form-horizontal" id="feedback_form" method="get" asp-controller="Admin" asp-action="LinkStitchingunitware">

                <div class="form-group">


                    <label asp-for="stitchingco" class="control-label col-lg-2">Stitchingunit Address</label><span style="color:red"></span>
                    <div class="col-lg-10">
                        <select asp-for="stitchingco" class="form-control m-bot15">
                            <option value=0>Select Option</option>
                            @if (ViewData["stitchingunitfree"] != null)
                            {

                                @foreach (var cat in (IEnumerable<BusinessEntity>)ViewData["stitchingunitfree"])
                                {

                                    <option value="@cat.EntityCode"> @cat.EntityAddress</option>

                                }
                            }


                        </select>
                        <span asp-validation-for="stitchingco" id="businessentitycheck" class="text-danger"></span>






                        <span id="designationcheck" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">


                    <label asp-for="warehouseco" class="control-label col-lg-2">Warehouse Address</label><span style="color:red"></span>
                    <div class="col-lg-10">
                        <select asp-for="warehouseco" class="form-control m-bot15">
                            <option value=0>Select Option</option>
                            @if (ViewData["warehousefree"] != null)
                            {

                                @foreach (var cat in (IEnumerable<BusinessEntity>)ViewData["warehousefree"])
                                {

                                    <option value="@cat.EntityCode">@cat.EntityAddress</option>

                                }
                            }


                        </select>
                        <span asp-validation-for="warehouseco" id="businessentitycheck" class="text-danger"></span>






                        <span id="designationcheck" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 
                         <button class="btn btn-primary" type="submit">Add</button>
                        <br /><br />

                    </div>
                </div>
            </form>
        
                    <section class="panel">
                        <header class="panel-heading">
                            Associated Stitchingunit
                        </header>

                        <table class="table table-striped table-advance table-hover">
                            <tbody>
                                <tr>
                                    <th> Stitching Unit Id</th>
                                    <th>Stitching Unit Address</th>
                                    <th> Warehouse Id</th>
                                    <th> Warehouse Address</th>
                                    
                                   
                                </tr>
                                @if (ViewData["tablestitching"] != null)
                                {

                                    @foreach (var entry in (IEnumerable<Tablestitchingunitwarehouse>)ViewData["tablestitching"])
                                    {
                                        <tr>
                                            <td>Id @entry.stitchingunitid</td>
                                            <td>@entry.stitchingunitaddress</td>
                                            <td>Id @entry.warehouseid</td>
                                            <td> @entry.warehousead</td>
                                        </tr>

                                    }
                                }


                               
                              

                            </tbody>
                        </table>
                        <br>

                    </section>

                    <!-- page end-->
        </section>
    </section>
    <!--main content end-->
