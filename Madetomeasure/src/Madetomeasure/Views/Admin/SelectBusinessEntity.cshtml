@model Madetomeasure.Models.Admin.EmployeeBusinessEntity
@using Madetomeasure.Models.Admin
@using Madetomeasure.Data
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@if (TempData["Message"] != null)
{
    @if ((string)TempData["Message"] == "nobusiness")
    {
        TempData["Message"] = " ";
        <script>
        alert('Please select BusinessEntity');
        </script>


        }
    }
@{
    ViewBag.Title = "Select Business Entity";
}

<section id="main-content">

    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa-files-o"></i> Add Employee</h3>
              
            </div>
        </div>
        <!-- Form validations -->
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Add New Shop
                    </header>

                    <div class="panel-body">
                        <div class="form">
                            <form class="form-validate form-horizontal" id="feedback_form" method="get" asp-controller="Admin" asp-action="AddNewEmployeeBu">

                                <div class="form-group">

                                    
                                    <label asp-for="work"  class="control-label col-lg-2">Business Entity*</label><span style="color:red"></span>
                                    <div class="col-lg-10">
                                        <select asp-for="work" class="form-control m-bot15">
                                            <option value=0> Select Option</option>
                                              @if (ViewData["BusinessEntity"] != null)
                                                {

                                                    @foreach (var cat in (IEnumerable<BusinessEntity>)ViewData["BusinessEntity"])
                                                    {

                                                        <option value="@cat.EntityCode"> @cat.EntityAddress</option>

                                                    }
                                                }


                                            </select>
                                        <span asp-validation-for="work" id="businessentitycheck" class="text-danger"></span>



                                           
                                      

                                        <span  id="designationcheck" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-offset-2 col-lg-10">
                                        <button class="btn btn-primary" type="submit">Add</button>
              
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </section>
            </div>
        </div>
        
        <!-- page end-->
    </section>
</section>
<!--main content start-->

@section Scripts {




    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}