@model Madetomeasure.Data.ShopOrder
@{
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa fa-bars"></i> Add shop order</h3>

    </div>


</div>
<!-- page start-->
<section class="panel">
    <header class="panel-heading">
        Add Shop Order
    </header>



    <div class="panel-body">

        <form asp-action="AddShopOrder">
            <div class="form-horizontal">

                <div class="form-group">
                    <label asp-for="ItemCode" class="col-md-2 control-label"></label>
                    <div class="col-lg-10">
                        <input asp-for="ItemCode" class="form-control" />
                        <span asp-validation-for="ItemCode" class="text-danger"></span>
                        <span class="text-danger">@ViewBag.itemnotfound</span>
                        <span class="text-danger">@ViewBag.itemquantity</span>


                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Quantity" class="col-md-2 control-label"></label>
                    <div class="col-lg-10">
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                        <span class="text-danger">@ViewBag.quantityerror</span>
                        <span>@ViewBag.successful</span>

                    </div>
                </div>


                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button type="submit" class="btn btn-default">Add</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

