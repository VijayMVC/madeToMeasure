@model Madetomeasure.Data.Item
@{
    ViewData["Title"] = "Home Page";
}

@{
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}


<div class="row"
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa fa-bars"></i> Check Item Status</h3>

    </div>
</div>
<!-- page start-->
<section class="panel">
    <header class="panel-heading">
        Search Item code
    </header>
    <div class="panel-body">
        <form asp-action="SearchItemStatus">
            <div class="form-horizontal">

                <div class="form-group">
                    <label asp-for="ItemCode" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="ItemCode" class="form-control" />
                        <span asp-validation-for="ItemCode" class="text-danger"></span>
                        <span class="text-danger">@ViewBag.notfound</span>
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button type="submit" class="btn btn-default">Search</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

</section>
@if (ViewBag.itemreturned == "yes")
{
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    Item Status
                </header>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>

                                <th>Item category</th>
                                <th>Item sub category</th>
                                <th>Brand</th>
                                <th>Quantity</th>
                                <th>Unit Of Measure</th>
                                <th>Unit Price</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>


                            <tr>
                                <td>
                                    @Html.DisplayFor(model => model.Category.CategoryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.SubCategory.SubCategoryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.BrandName)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Quantity)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.UnitofMeasure)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.UnitCostPrice)
                                </td>


                            </tr>




                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
<!-- page end-->