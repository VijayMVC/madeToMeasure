@model Madetomeasure.Data.Receipt

@{
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa fa-bars"></i> Generate Receipt</h3>

    </div>
</div>
<!-- page start-->
<section class="panel">
    <header class="panel-heading">
        Invoice Number
    </header>
    <div class="panel-body">
        <form asp-action="ReceiptGeneration">
            <div class="form-horizontal">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="InvoiceId" class="col-md-2 control-label"></label>
                    <div class="col-lg-10">
                        <input asp-for="InvoiceId" class="form-control" />
                        <span asp-validation-for="InvoiceId" class="text-danger"></span>
                        <span class="text-danger">@ViewBag.receiptmessage</span>
                        <span class="text-danger">@ViewBag.alreadypresent</span>


                    </div>
                </div>




                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button type="submit" class="btn btn-default">Generate</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
