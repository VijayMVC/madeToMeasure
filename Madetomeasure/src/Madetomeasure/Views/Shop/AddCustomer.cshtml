@model Madetomeasure.ViewModels.Shop.AddCustomerViewModel


@{
        Layout = "~/Views/Shared/_ShopLayout.cshtml";
    }
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa fa-bars"></i> Add Customer</h3>

    </div>
</div>
<!-- page start-->
<section class="panel">
    <header class="panel-heading">
        Add Customer
    </header>
    <div class="panel-body">
        <form asp-action="AddCustomer">
            <div class="form-horizontal">
                <span>@ViewBag.successful</span>
                <span>@ViewBag.duplicationerror</span>


                <div class="form-group">
                    <label asp-for="PhoneNumber" class="col-md-2 control-label"></label>
                    <div class="col-lg-10">
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>



                    </div>

                    <label asp-for="Name" class="col-md-2 control-label"></label>
                    <div class="col-lg-10">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>



                    </div>

                    <label asp-for="Password" class="col-md-2 control-label"></label>
                    <div class="col-lg-10">
                        <input asp-for="Password" class="form-control" type="password"/>
                        <span asp-validation-for="Password" class="text-danger"></span>



                    </div>
                </div>




                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button type="submit" class="btn btn-default">Add</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
