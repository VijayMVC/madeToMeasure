        Layout = "~/Views/Shared/Layout_Print.cshtml";
    }*@

@model Madetomeasure.ViewModels.Shop.InvoiceViewModel
@{
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}




<script>
    $(function () {
        $('#btn').click(function () {
            $("#header").hide();
            $("#aside").hide();
            $("#print").hide();
            window.print();
            $("#header").show();
            $("#aside").show();
            $("#print").show();
        });
    });
</script>
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa fa-bars"></i> Print Receipt</h3>

    </div>
</div>
<!-- page start-->


<div class="row">
    <div class="col-sm-6">
        <section class="panel">
            <header class="panel-heading">
                Invoice
            </header>
            <div class="col-sm-6">
                <div class="row">
                    <label>Invoice ID: @Html.DisplayFor(model => model.InvoiceId)</label>
                </div>
                <div class="row">
                    <label>Receipt ID: @Html.DisplayFor(model => model.ReceiptId)</label>
                </div>
                <div class="row">
                    <label>Sales Person: @Html.DisplayFor(model => model.salesperson_name)</label>
                </div>
                <div class="row">
                    <label>Shop Address: @Html.DisplayFor(model => model.shop_address)</label>
                </div>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Job Type</th>
                        <th>Price</th>

                    </tr>
                </thead>
                <tbody>
                    @{
                        int count = 1;
                    }
                    @foreach (var x in Model.InvoiceDetails)
                    {

                        <tr>
                            <td>@count</td>
                            <td>@Html.Encode(@x.job_type)</td>
                            <td>@Html.Encode(@x.Price)</td>

                        </tr>
                        count++;
                    }
                    <tr>
                        <td></td>
                        <td><strong>Total:</strong></td>
                        <td><strong>@Html.DisplayFor(model => model.TotalAmount)</strong></td>

                    </tr>

                </tbody>
            </table>

        </section>

        <div class="col-md-4" id="print">
            <a class="btn btn-default" id="btn" href="">Print</a>
        </div>

    </div>
</div>
