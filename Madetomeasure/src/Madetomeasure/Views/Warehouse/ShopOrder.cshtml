@model IEnumerable<Madetomeasure.Models.WarehouseModels.ShopOrderDetails>

@{
    ViewBag.Title = "Shop Orders";
    Layout = "~/Views/Shared/_WarehouseLayout.cshtml";

}


<section id="container" class="">
   
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="fa fa-files-o"></i> Shop Orders</h3>

                </div>
            </div>

            <form asp-controller="Warehouse" asp-action="ShopOrder" method="post" role="form">



                <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <header class="panel-heading">
                                Shop Orders
                            </header>

                            <table class="table table-striped table-advance table-hover">
                                <tbody>
                                    <tr>
                                        <th>Shop Code</th>
                                        <th>Category Name</th>
                                        <th>Sub-Category Name</th>
                                        <th>Brand</th>
                                        <th>Color</th>

                                        <th>Quantity</th>
                                        <th>Unit of Measure</th>
                                        <th>Select</th>
                                    </tr>



                                    @foreach (var shopOrder in Model)
                                    {

                                        <tr>

                                            <td>
                                                Shop @Html.Encode(@shopOrder.ShopCode)
                                            </td>

                                            <td>@Html.Encode(@shopOrder.CategoryName)</td>
                                            <td>@Html.Encode(@shopOrder.SubCategoryName) </td>
                                            <td>@Html.Encode(@shopOrder.Brand) </td>
                                            <td>@Html.Encode(@shopOrder.Color) </td>
                                            <td>@Html.Encode(@shopOrder.Quantity) </td>
                                            <td>@Html.Encode(@shopOrder.UnitOfMeasure) </td>
                                            <td>
                                                <input type="checkbox" name="ordersProcessed" value="@Html.Encode(shopOrder.Id)">
                                            </td>
                                        </tr>

                                    }




                                </tbody>

                            </table>



                        </section>
                        <br />

                        <input type="submit" class="btn btn-primary btn-lg" value="Process Order" style="float: right;" />

                        <div class="row">
                            <div class="col-lg-4">
                                </div>

                            <div class="col-lg-4">
                                @{
                                    if (TempData["ShopConfirmation"] != null && TempData["ShopConfirmation"].ToString() == "success")
                                    {

                                        <div class="alert alert-success fade in" style="font-size:medium">

                                            <strong>Shop Orders Processed Successfully!</strong>
                                        </div>
                                        TempData["ShopConfirmation"] = "";

                                    }

                                }

                            </div>

                      
                       </div>

                    </div>
                </div>

                </form>

                <!-- page end-->
</section>


    </section>

    <!-- container section end -->


</section>