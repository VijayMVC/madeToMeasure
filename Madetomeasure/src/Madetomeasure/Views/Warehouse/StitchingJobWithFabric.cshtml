@model Madetomeasure.Models.WarehouseModels.StitchingJobContentDetails
@{
    ViewBag.Title = "Stitching Jobs";
    Layout = "~/Views/Shared/_WarehouseLayout.cshtml";

}

<!-- container section start -->
<section id="container" class="">
   

    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="fa fa-files-o"></i> Stitching orders with Fabric</h3>

                </div>
            </div>


            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Order details
                        </header>

                        <div class="panel-body">
                            <div class="form">
                                <form class="form-validate form-horizontal" id="feedback_form">
                                    <div class="form-group">
                                        <label for="catname" class="control-label col-lg-3"><b>Order ID: <b /></label>
                                        <div class="col-lg-9">
                                            <span class="text-control">@Model.orderDetails.OrderId</span>
                                        </div>

                                    </div>


                                    <div class="form-group">
                                        <label for="catname" class="control-label col-lg-3"><b>Shop Code: </b></label>
                                        <div class="col-lg-9">
                                            <span class="text-control">@Model.orderDetails.ShopCode</span>
                                        </div>

                                    </div>


                                    <div class="form-group">
                                        <label for="catname" class="control-label col-lg-3"><b>Order Date: </b></label>
                                        <div class="col-lg-3">
                                            <span class="text-control">@Model.orderDetails.OrderDate</span>
                                        </div>


                                        <label for="catname" class="control-label col-lg-3"><b>Expected Delivery Date: </b></label>
                                        <div class="col-lg-3">
                                            <span class="text-control">@Model.orderDetails.ExpectedDeliveryDate</span>
                                        </div>

                                    </div>


                                    <div class="form-group">
                                        <label for="catname" class="control-label col-lg-3"><b>Job Type: </b></label>
                                        <div class="col-lg-9">
                                            <span class="text-control">@Model.orderDetails.JobType</span>
                                        </div>

                                    </div>




                                </form>
                            </div>

                        </div>

                    </section>

                </div>
            </div>


            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Items Provided with Order
                        </header>

                        <table class="table table-striped table-advance table-hover">
                            <tbody>
                                <tr>
                                    <th>Category</th>
                                    <th>Sub-Category</th>
                                    <th>Brand</th>
                                    <th>Color</th>
                                    <th>Quantity</th>

                                </tr>


                                @foreach (var item in Model.itemDescription)
                                {
                                    <tr>
                                        <td>@item.Category</td>
                                        <td>@item.SubCategory</td>
                                        <td>@item.Brand</td>
                                        <td>@item.Color</td>
                                        <td>@item.Quantity</td>

                                    </tr>




                                }

                               



                            </tbody>
                        </table>




                    </section>

                    <a class="btn btn-primary btn-lg" href="http://localhost:63691/Warehouse/ProcessStitchingJob?Id=@Model.orderDetails.OrderId" style="float: right;">Process Order</a>




                </div>
            </div>
            <!-- page end-->
        </section>


    </section>




</section>

<!-- container section end -->