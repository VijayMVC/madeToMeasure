<section id="container" class="">
   

    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="fa fa-files-o"></i> Stitching Orders</h3>

                </div>
            </div>




            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                           <b> Stitching orders with fabric</b>
                        </header>

                        <table class="table table-striped table-advance table-hover" id="WithFabricTable">
                            <tbody>
                                <tr>
                                    <th>Order#</th>
                                    <th>Shop Code</th>
                                    <th>Job Type</th>
                                    <th>Order Date</th>
                                    <th>Expected Delivery Date</th>

                                </tr>


                               
                                    @{int ord = 1; }

                                    @foreach (var stitchingOrder in Model)
                                    {
                                        if (@stitchingOrder.FabricFromCustomer == 1)
                                        {
                                            
                                        <tr style="cursor: pointer;" onclick="location.href = 'http://localhost:63691/Warehouse/StitchingJobWithFabric?Id=@stitchingOrder.OrderId'">
                                            <td>
                                                @ord
                                                @{ord = ord + 1;
                                                }
                                            </td>
                                            <td>
                                                 @stitchingOrder.ShopCode
                                            </td>
                                            <td>
                                                @stitchingOrder.JobType
                                            </td>
                                            <td>
                                                @stitchingOrder.OrderDate
                                            </td>
                                            <td>
                                                @stitchingOrder.ExpectedDeliveryDate
                                            </td>
                                        </tr>

                                        }
                                    }


                            </tbody>
                        </table>

                    </section>

                </div>
            </div>

            <br />


            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            <b>Stitching orders without fabric</b>
                        </header>

                        <table class="table table-striped table-advance table-hover" id="WithoutFabricTable">
                            <tbody>
                                <tr>

                                    <th>Order#</th>
                                    <th>Shop Code</th>
                                    <th>Job Type</th>
                                    <th>Order Date</th>
                                    <th>Expected Delivery Date</th>


                                </tr>

                                @{int orde = 1; }

                                @foreach (var stitchingOrder in Model)
                                {
                                    if (@stitchingOrder.FabricFromCustomer == 0)
                                    {
                                    <tr style="cursor: pointer;" onclick="location.href = 'http://localhost:63691/Warehouse/StitchingJobWithoutFabric?Id=@stitchingOrder.OrderId'">
                                        <td>
                                            @orde
                                            @{orde = orde + 1;
                                            }
                                        </td>
                                        <td>
                                             @stitchingOrder.ShopCode
                                        </td>
                                        <td>
                                            @stitchingOrder.JobType
                                        </td>
                                        <td>
                                            @stitchingOrder.OrderDate
                                        </td>
                                        <td>
                                            @stitchingOrder.ExpectedDeliveryDate
                                        </td>
                                    </tr>

                                    }
                                }


                            </tbody>
                        </table>

                    </section>

                </div>
            </div>
            <!-- page end-->
        </section>


    </section>

    <!-- container section end -->


</section>